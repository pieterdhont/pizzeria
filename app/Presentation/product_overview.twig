{% extends 'base.twig' %} {% block title %}Product Overzicht{% endblock %} {%
block body %}
<div class="container-fluid py-4">
    <div class="row">
        <!-- Pizza's section -->
        <div class="col-lg-6 col-md-12 mb-4">
            <h2 class="mb-3"><strong>Onze Pizza's</strong></h2>
            <div class="row">
                {% for product in products %}
                <div class="col-md-6 col-sm-12 mb-3">
                    <div class="card">
                        {% set productImage = '' %}
                        {% for pizzaItem in pizza %}
                        {% if pizzaItem.name == product.getNaam() %}
                        {% set productImage = pizzaItem.imageUrl %}
                        {% endif %}
                        {% endfor %}
                        {% if productImage != '' %}
                        <img src="{{ productImage }}" class="card-img-top" alt="{{ product.getNaam() }}">
                        {% else %}
                        <img src="/path/to/default/image.jpg" class="card-img-top" alt="{{ product.getNaam() }}">
                        {% endif %}
                        <div class="card-body">
                            <h5 class="card-title">{{ product.getNaam() }}</h5>
                            <p>Prijs: €{{ product.getPrijs() }}</p>
                            <p>
                                {% if product.getPromotieprijs() %} Promotieprijs: €{{
                                product.getPromotieprijs()
                                }}
                                {% else %} - {% endif %}
                            </p>
                            <p class="card-text">{{ product.getProductinformatie() }}</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <form method="post">
                                    <input type="hidden" name="product_id" value="{{ product.getProdid() }}" />
                                    <button type="submit" class="btn btn-primary" {% if not product.isBeschikbaar()
                                        %}disabled{% endif %}>
                                        Toevoegen
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>

        <!-- Mandje section -->
        <div class="col-lg-6 col-md-12">
            <h2 class="mb-3"><strong>Mandje</strong></h2>
            <div class="shopping-cart">
                {% for product in mandjeItems %}
                <div class="card mb-3">
                    <div class="card-body">
                        <h5 class="card-title">{{ product.getNaam() }}</h5>
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="card-text">Aantal: {{ mandje[product.getProdid()] }}</span>
                            <div class="item-actions">
                                <form method="post" class="form-inline">
                                    <input type="hidden" name="remove_one_product_id"
                                        value="{{ product.getProdid() }}" />
                                    <button type="submit" class="btn btn-danger">-</button>
                                </form>
                                <form method="post" class="form-inline">
                                    <input type="hidden" name="increase_product_id" value="{{ product.getProdid() }}" />
                                    <button type="submit" class="btn btn-success">+</button>
                                </form>
                                <form method="post" class="form-inline">
                                    <input type="hidden" name="remove_product_id" value="{{ product.getProdid() }}" />
                                    <button type="submit" class="btn btn-warning">
                                        Verwijder
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                {% endfor %}
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Totaalprijs: €{{ totaalprijs }}</h5>
                        <form method="post">
                            <input type="submit" class="btn btn-primary" name="checkout" value="Afrekenen" {% if
                                mandjeItems|length==0 %}disabled{% endif %}>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<a class="btn btn-primary" href="logout.php">Uitloggen</a>
{% endblock %}